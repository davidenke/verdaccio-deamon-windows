{
  "extends": ["standard", "eslint:recommended", "plugin:node/recommended"],
  "plugins": ["node"],
  "env": {
    "browser": false,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "no-console": "warn",
    "node/exports-style": ["error", "module.exports"]
  }
}
